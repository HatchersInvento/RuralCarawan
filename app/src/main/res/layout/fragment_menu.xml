<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_image"
    tools:context=".Activity.MenuFragment">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#816830"
        android:id="@+id/menu_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <!--  <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back_arrow"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/menu_btnBack"/>-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Customer Agreement "
                android:layout_marginLeft="15dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_below="@id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/customer_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:textColor="@color/DarkBrown"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="1"
            android:id="@+id/one"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/customer_registration"
            android:layout_marginLeft="28dp"
            android:text="Customer Registration"
            android:textColor="@color/DarkBrown"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_below="@id/customer_linear"
        android:background="@color/DarkBrown">

    </View>


    <LinearLayout
        android:layout_below="@id/customer_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/kitchen_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkBrown"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="2"
            android:id="@+id/two"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/kitchen_suitability"
            android:layout_marginLeft="28dp"
            android:text="Kitchen Suitability"
            android:textColor="@color/DarkBrown"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@id/kitchen_linear"
        android:background="@color/DarkBrown">

    </View>


    <LinearLayout
        android:layout_below="@id/kitchen_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/construction_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkBrown"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="3"
            android:id="@+id/three"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/construction_team_deatails"
            android:layout_marginLeft="28dp"
            android:text="Construction Team Details"
            android:textColor="@color/DarkBrown"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view3"
        android:layout_below="@id/construction_linear"
        android:background="@color/DarkBrown">

    </View>



    <LinearLayout
        android:layout_below="@id/construction_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/payment_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkBrown"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="4"
            android:id="@+id/four"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/payment_information"
            android:layout_marginLeft="28dp"
            android:text="Payment Information"
            android:textColor="@color/DarkBrown"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view4"
        android:layout_below="@id/payment_linear"
        android:background="@color/DarkBrown">

    </View>



</RelativeLayout>
